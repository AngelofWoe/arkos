#!/bin/bash

function current() {
	readlink -f /etc/localtime | sed 's;/usr/share/zoneinfo/;;'
}

function available() {
	grep -v "^#" /usr/share/zoneinfo/zone1970.tab | awk '{ print $3 }' | sort -u | tr '\n' ','
}

# Main
main () {
	cmd="${1}"
	shift
	"${cmd}" "$@"

	exit 0
}

# Make sure script is running directly
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    main "$@"
fi
