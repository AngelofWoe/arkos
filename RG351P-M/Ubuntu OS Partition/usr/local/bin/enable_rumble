#!/bin/bash

# Main
main () {
    if [ -f /sys/class/pwm/pwmchip0/export ]; then
        echo 0 | sudo tee /sys/class/pwm/pwmchip0/export > /dev/null
    fi
    echo 1000000 | sudo tee /sys/class/pwm/pwmchip0/pwm0/period > /dev/null
    echo 1 | sudo tee /sys/class/pwm/pwmchip0/pwm0/enable > /dev/null
    echo 1000000 | sudo tee /sys/class/pwm/pwmchip0/pwm0/duty_cycle > /dev/null
}

# Make sure script is running directly
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    main "$@"
fi
